<!DOCTYPE html>
<html lang="en">
<head>
  <title>somber.js – {{ sections.[0].name }}</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <base href="https://straker.github.io/somber/">

  <script>
  // adjust path based on location (github pages required somber url)
  if (['localhost', '127.0.0.1'].includes(window.location.hostname)) {
    let base = document.querySelector('base');
    base.setAttribute('href', '/');
  }
  </script>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/prism/1.16.0/themes/prism.min.css">
  <link rel="stylesheet" href="assets/styles.css">
  <script src="assets/js/somber.js"></script>
</head>
<body>
  <div class="content">
    <header class="main-nav">
      <div id="somber-heading" class="nav-heading">Somber</div>
      <a href="#main">Skip navigation</a>

      <nav>
        <button class="menu-button" aria-expanded="false" aria-controls="menu"><span aria-hidden="true">☰</span> Menu</button>

        <!-- add role=list back to list so screen readers still read it as list when
             css list-style: none is set
             @see https://web-a11y.slack.com/archives/C042TSFGN/p1501699529181172 -->
        <ul id="menu" role="list">
          <li>
            <div aria-hidden="true" class="cached-icon" id="link-intro">
              <span class="visually-hidden">Cached for offline viewing</span>
            </div>
            <a href="." id="root-link" {{#if nav-index}}aria-current="page"{{/if}}>Introduction</a>
          </li>
          <li>
             <div aria-hidden="true" class="cached-icon" id="link-getting-started">
              <span class="visually-hidden">Cached for offline viewing</span>
            </div>
            <a href="getting-started" {{#if nav-getting-started}}aria-current="page"{{/if}}>Getting Started</a>
          </li>
          <li>
             <div aria-hidden="true" class="cached-icon" id="link-download">
              <span class="visually-hidden">Cached for offline viewing</span>
            </div>
            <a href="download" {{#if nav-download}}aria-current="page"{{/if}}>Download</a>
          </li>

          <li>
            <span id="api" class="nav-api-heading">API</span>
            <ul aria-labelledby="api">
              {{#each navbar}}
              <li>
                <div aria-hidden="true" class="cached-icon" id="link-{{ url }}">
                  <span class="visually-hidden">Cached for offline viewing</span>
                </div>
                <a href="api/{{ url }}" {{#if selected}}aria-current="page"{{/if}}>{{ name }}</a>
              </li>
              {{/each}}
            </ul>
          </li>
        </ul>
      </nav>
      <div class="scroll-indicator" aria-hidden="true"><span>^</span></div>
    </header>

    <script>
      // restore scroll position on page load (do it here so there is no flash
      // of unscrolled content)
      let nav = document.querySelector('.main-nav');
      if (sessionStorage.getItem('somber-nav-scroll')) {
        nav.scrollTop = parseInt(sessionStorage.getItem('somber-nav-scroll'));

        if (nav.offsetHeight + nav.scrollTop < nav.scrollHeight) {
          nav.classList.add('showScroll');
        }
      }
    </script>

    <main id="main">
      <div>
        <a href="https://github.com/straker/somber" class="github-corner" aria-label="View source on GitHub"><svg width="80" height="80" viewBox="0 0 250 250" style="fill:#151513; color:#fff; position: absolute; top: 0; border: 0; right: 0;" aria-hidden="true"><path d="M0,0 L115,115 L130,115 L142,142 L250,250 L250,0 Z"></path><path d="M128.3,109.0 C113.8,99.7 119.0,89.6 119.0,89.6 C122.0,82.7 120.5,78.6 120.5,78.6 C119.2,72.0 123.4,76.3 123.4,76.3 C127.3,80.9 125.5,87.3 125.5,87.3 C122.9,97.6 130.6,101.9 134.4,103.2" fill="currentColor" style="transform-origin: 130px 106px;" class="octo-arm"></path><path d="M115.0,115.0 C114.9,115.1 118.7,116.5 119.8,115.4 L133.7,101.6 C136.9,99.2 139.9,98.4 142.2,98.6 C133.8,88.0 127.5,74.4 143.8,58.0 C148.5,53.4 154.0,51.2 159.7,51.0 C160.3,49.4 163.2,43.6 171.4,40.1 C171.4,40.1 176.1,42.5 178.8,56.2 C183.1,58.6 187.2,61.8 190.9,65.4 C194.5,69.0 197.7,73.2 200.1,77.6 C213.8,80.2 216.3,84.9 216.3,84.9 C212.7,93.1 206.9,96.0 205.4,96.6 C205.1,102.4 203.0,107.8 198.3,112.5 C181.9,128.9 168.3,122.5 157.7,114.1 C157.9,116.9 156.7,120.9 152.7,124.9 L141.0,136.5 C139.8,137.7 141.6,141.9 141.8,141.8 Z" fill="currentColor" class="octo-body"></path></svg></a>

        {{#each sections}}
        <h1>{{ name }}
          {{~#if param~}}
            (&#8203;{{ paramList }})
          {{/if}}
        </h1>

        {{{ description }}}
        {{#if example}}
          {{~> example-output ~}}
        {{/if}}

        {{#each children}}
        <section>
          <h2 id="{{ name }}">
            <a href="api/{{ ../id }}#{{ name }}" class="section-link">
              <span>{{#if memberof}}{{ memberof }}&#8203;.{{/if}}{{ name }}
              {{~#if function}}(&#8203;{{ paramList }}){{/if}}</span>
              <span aria-hidden="true">#</span>
            </a>
          </h2>

          {{{ description }}}
          {{#if example}}
            <pre><code class="lang-html">{{ example.description }}</code></pre>
          {{/if}}
        </section>
        {{/each}}
        {{/each}}

      </div>
    </main>
  </div>

  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.16.0/prism.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/prism/1.16.0/components/prism-javascript.min.js"></script>
  <script>
  // only service worker off localhost
  if (
    'serviceWorker' in navigator &&
    !['localhost', '127.0.0.1'].includes(window.location.hostname)
  ) {
    window.addEventListener('load', () => {
      navigator.serviceWorker.register('service-worker.js')
      .then(registration => {
        console.log('Service Worker is registered', registration);

        // cache this page
        let cachedPages = JSON.parse(localStorage.getItem('somber-docs-pages') || "{}");
        cachedPages[window.location.href] = true;

        // always cache the index
        cachedPages[document.querySelector('#root-link').href] = true;

        localStorage.setItem('somber-docs-pages', JSON.stringify(cachedPages));

        // show user cached pages
        document.querySelectorAll('#menu a').forEach(anchor => {
          if (cachedPages[anchor.href]) {
            let id = anchor.previousElementSibling.getAttribute('id');

            anchor.parentNode.classList.add('cached');
            anchor.setAttribute('aria-describedby', id);
          }
        });
      })
      .catch(err => {
        console.error('Registration failed:', err);
      });
    });
  }
  </script>
  <script src="assets/js/navbar.js"></script>
  <script src="assets/js/exampleTabList.js"></script>
</body>
</html>